<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="mobisocial.arcade">
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PRIVILEGED_PHONE_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS"/>
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:roundIcon="@drawable/apkicon"
        android:icon="@drawable/apkicon"
        tools:replace="android:allowBackup"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:hardwareAccelerated="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:networkSecurityConfig="@xml/network_security_config"
        android:name=".MyApplication">
        <meta-data android:name="com.onesignal.NotificationOpened.DEFAULT" android:value="DISABLE" />
        <activity android:name= ".SplashScreenActivity"    android:theme="@style/switchtheme">
            <intent-filter >
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
        <service android:name="mobisocial.arcade.FloatLogo" android:exported="false" android:enabled="true"/>
        <activity android:name="mobisocial.arcade.GameActivity"/>
        <activity android:name="mobisocial.arcade.RDetailActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name="mobisocial.arcade.LoginActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name="mobisocial.arcade.ResellerActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name="mobisocial.arcade.AppUpdaterActivity"/>
        <activity android:name="mobisocial.arcade.HomeActivity"/>
        <activity android:name="mobisocial.arcade.activityMaintain"/>
        <activity android:name="mobisocial.arcade.PluginActivity"/>
        <activity android:name="mobisocial.arcade.free.FLoginActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <activity android:name="mobisocial.arcade.free.FHomeActivity" android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <service android:name="mobisocial.arcade.free.FreeFloatLogo" android:exported="false" android:enabled="true"/>

        <activity android:name="mobisocial.arcade.bgmi.HomeActivity" android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <service android:name="mobisocial.arcade.logo" android:exported="false" android:enabled="true"/>
        <service android:name="mobisocial.arcade.flogo" android:exported="false" android:enabled="true"/>

        <activity android:name=".freebgmi.BHomeActivity" />
    </application>
</manifest>