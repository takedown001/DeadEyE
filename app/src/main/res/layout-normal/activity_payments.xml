<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="match_parent"
        android:layout_height="351dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="payments.json"
        app:lottie_loop="true" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="292dp"
        android:layout_below="@+id/animationView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="122dp"
        app:cardBackgroundColor="#2F3844"
        app:cardCornerRadius="@dimen/dimen_25dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/paytextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen_14sp"
                android:layout_marginStart="@dimen/dimen_80dp"
                android:text="Payment Gateway"
                android:textColor="@color/white" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fname"
                android:layout_width="274dp"
                android:layout_height="59dp"
                android:layout_below="@+id/paytextview"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="22dp"
                android:background="@drawable/blankfill"
                android:fontFamily="@font/montserrat"
                android:hint="Enter Your Name"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mobile"
                android:layout_width="270dp"
                android:layout_height="54dp"
                android:layout_below="@+id/fname"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="22dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="22dp"
                android:background="@drawable/blankfill"
                android:fontFamily="@font/montserrat"
                android:hint="Enter Your Mobile No."
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/paynow"
                android:layout_width="267dp"
                android:layout_height="77dp"
                android:layout_below="@+id/mobile"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="21dp"
                android:background="@drawable/activatebtnbacki"
                android:fontFamily="@font/montserrat_bold"
                android:text="Pay"
                android:textColor="@color/white" />

        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</RelativeLayout>